<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdbc9">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="高齢者の生活、こんな事に気をつけて"
            android:textColor="#fefefe"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center_horizontal"
            android:background="#008bbb"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="見たい動画のボタンをクリックしてください"
            android:textColor="#110011"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btnVideo1"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:text="コンセントプラグ"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/button_style"/>

        <Button
            android:id="@+id/btnVideo2"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:text="ストーブ"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center"
            android:background="@drawable/button_style"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnVideo3"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:text="たばこの吸い殻"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_style"/>

        <Button
            android:id="@+id/btnVideo4"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:text="天ぷら油・グリル"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_style"/>

        <Button
            android:id="@+id/btnVideo5"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:text="着衣への着火"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_style"/>

        <Button
            android:id="@+id/btnVideo6"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:text="片付けていない部屋"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_style"/>

        <Button
            android:id="@+id/btnVideo7"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:text="酸素吸入中のたばこ"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_style"/>

        <Button
            android:id="@+id/btnVideo8"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:text="住宅用火災警報機"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_style"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:background="#00000000"
                android:src="@drawable/kyokusyo"
                android:scaleType="fitEnd"/>

            <TextView
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="大阪市消防局"
                android:textColor="#110011"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>